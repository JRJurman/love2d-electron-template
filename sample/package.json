{
  "name": "love2d-electron-sample",
  "scripts": {
    "start": "electron sample",
    "build": "zip sample.zip main.lua && love.js sample.zip sample -t sample -c",
    "build:app-template": "cp ../index.js sample/index.js && cp ../template.html sample/index.html",
    "postbuild": "npm run build:app-template"
  },
  "dependencies": {
    "electron": "^35.0.0",
    "electron-serve": "^2.1.1",
    "love.js": "^11.4.1"
  }
}
